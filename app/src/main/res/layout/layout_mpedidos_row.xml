<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:elevation="5dp"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools">

    <com.example.altokepeapp.utils.ATKTextView
        android:id="@+id/tv_fecha_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/colorSecundaryText"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2021-06-12" />

    <com.example.altokepeapp.utils.ATKTextView
        android:id="@+id/tv_nombre_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:textColor="@color/colorSecundaryText"
        app:layout_constraintEnd_toStartOf="@+id/tv_cantidad_pedido"
        app:layout_constraintStart_toEndOf="@+id/tv_fecha_pedido"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="tallarines verdes" />

    <com.example.altokepeapp.utils.ATKTextView
        android:id="@+id/tv_cantidad_pedido"
        android:textColor="@color/colorSecundaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_total_pedido"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5" />

    <com.example.altokepeapp.utils.ATKTextView
        android:id="@+id/moneda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="S/."
        android:textColor="@color/colorSecundaryText"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_total_pedido"
        app:layout_constraintStart_toEndOf="@+id/tv_cantidad_pedido"
        app:layout_constraintTop_toTopOf="parent" />
    <com.example.altokepeapp.utils.ATKTextView
        android:id="@+id/tv_total_pedido"
        android:textColor="@color/colorSecundaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="50" />

</androidx.constraintlayout.widget.ConstraintLayout>